rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the request matches the user's UID
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if the user has the isAdmin flag in their profile
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // --- Users Collection ---
    // Contains user profiles, settings, and safe foods.
    match /users/{userId} {
      // Allow users to read and write only their own document.
      // Allow admins to read any user profile (useful for admin dashboards)
      allow read: if isOwner(userId) || isAdmin();
      allow write: if isOwner(userId);

      // --- Timeline Entries Subcollection ---
      // Contains food logs, symptoms, and activity data.
      match /timelineEntries/{entryId} {
        // Allow users to full control over their own timeline entries.
        allow read, write: if isOwner(userId);
      }
    }

    // --- Feedback Collection ---
    // Stores user feedback entries.
    match /feedbackSubmissions/{feedbackId} {
      // Allow any authenticated user to create feedback.
      allow create: if isAuthenticated();

      // Allow users to read ONLY their own feedback.
      // Allow admins to read ALL feedback.
      allow read: if (isAuthenticated() && resource.data.userId == request.auth.uid) || isAdmin();
      
      // Allow list queries:
      // 1. Users filtering by their own UID.
      // 2. Admins (who might query all documents).
      allow list: if (isAuthenticated() && request.query.filters.userId == request.auth.uid) || isAdmin();
      
      // Allow admins to update status (e.g. mark as viewed)
      allow update: if isAdmin();
    }

    // --- Default Deny ---
    // Explicitly deny access to any other potential collections not listed here.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
